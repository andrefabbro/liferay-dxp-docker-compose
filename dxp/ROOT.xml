	<Resources>
		<PreResources
			base="${catalina.base}/lib/ext/portal"
			className="com.liferay.support.tomcat.webresources.ExtResourceSet"
			webAppMount="/WEB-INF/lib"
		/>
	</Resources>
	
	<!-- factory="com.zaxxer.hikari.HikariJNDIFactory" -->

	<Resource name="jdbc/LiferayPool"
		  auth="Container"
		  factory="com.zaxxer.hikari.HikariJNDIFactory"
	      type="javax.sql.DataSource"
	      minimumIdle="5" 
	      maximumPoolSize="80"
	      connectionTimeout="30000"
	      dataSourceClassName="org.mariadb.jdbc.MySQLDataSource"
	      dataSource.url="jdbc:mysql://mariadb:3306/lportal?useUnicode=true&amp;characterEncoding=UTF-8&amp;useFastDateParsing=false"
	      dataSource.user="root"
	      dataSource.password="root" />

